<odoo>
    <!-- Snippets -->
    <template id="s_defi_aliment_ashley" name="Defi Aliment">
        <section class="o_defi_aliment_ashley">
            <div class="container">
                <div class="text-center defi_aliment_ashley_value">Object</div>
                <form
                    action="/defi_aliment_ashley/add"
                    method="POST"
                    class="form-horizontal mt32"
                    enctype="multipart/form-data"
                >
                    <div class="form-group">
                        <label class="col-md-3 col-sm-4 control-label" for="ypos">Ecrire un aliment</label>
                        <div class="col-md-7 col-sm-8">
                            <input
                                type="text"
                                class="form-control o_website_form_input"
                                name="ypos"
                                t-att-value="default_ypos"
                            />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-3 col-sm-offset-4 col-sm-8 col-md-7">
                            <button class="btn btn-primary btn-lg">Ajouter</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </template>

    <!-- Add snippets to menu -->
    <template id="snippet_effect" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_effect']/div[hasclass('o_panel_body')]" position="inside">
            <t
                t-snippet="defi_aliment_ashley.s_defi_aliment_ashley"
                t-thumbnail="/defi_aliment_ashley/static/description/icon.png"
            />
        </xpath>
    </template>

    <!-- Add stylesheet and Javascript -->
    <template id="assets_frontend" inherit_id="website.assets_frontend">
        <xpath expr="//link[last()]" position="after">
            <link
                rel="stylesheet"
                type="text/scss"
                href="/defi_aliment_ashley/static/src/scss/defi_aliment_ashley.scss"
            />
        </xpath>
        <xpath expr="//script[last()]" position="after">
            <script
                type="text/javascript"
                src="/defi_aliment_ashley/static/src/js/website.defi_aliment_ashley.animation.js"
            />
        </xpath>
    </template>
</odoo>
