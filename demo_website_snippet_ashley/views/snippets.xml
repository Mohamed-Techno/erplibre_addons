<odoo>

    <!-- Snippets -->
    <template id="s_demo_website_snippet_ashley" name="Website Aliments">
        <section class="o_demo_website_snippet_ashley">
            <div class="container">
                <div class="text-center demo_website_snippet_value">Aliments</div>
                <label for="aliment">Ecrire un aliment : </label>
                <input type="text" id="text_aliments">
                <br/>
                <label for="type">Choisir un type : </label>
                <select name="type" id="type">
                    <option value="fruit">Fruit</option>
                    <option value="legume">Légume</option>
                    <option value="Protéines">Protéines</option>
                    <option value="produits laitiers">Produits laitiers</option>
                </select>
                <br/>
                </input><button>Envoyer</button>
            </div>
        </section>
    </template>

    <!-- Add snippets to menu -->
    <template id="snippet_effect" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_effect']/div[hasclass('o_panel_body')]" position="inside">
            <t
                t-snippet="demo_website_snippet_ashley.s_demo_website_snippet_ashley"
                t-thumbnail="/demo_website_snippet_ashley/static/description/icon.jpg"
            />
        </xpath>
    </template>

    <!-- Add stylesheet and Javascript -->
    <template id="assets_frontend" inherit_id="website.assets_frontend">
        <xpath expr="//link[last()]" position="after">
            <link
                rel="stylesheet"
                type="text/scss"
                href="/demo_website_snippet_ashley/static/src/scss/demo_website_snippet_ashley.scss"
            />
        </xpath>
        <xpath expr="//script[last()]" position="after">
            <script
                type="text/javascript"
                src="/demo_website_snippet_ashley/static/src/js/website.demo_website_snippet_ashley.animation.js"
            />
        </xpath>
    </template>
</odoo>
